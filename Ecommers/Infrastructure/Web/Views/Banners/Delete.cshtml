@model Ecommers.Domain.Entities.BannersD

@{
    ViewData["Title"] = "Eliminar Banner";
    Layout = "~/Infrastructure/Web/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="bg-pattern min-h-screen py-8 px-4">
    <div class="mx-auto space-y-6">

        <!-- Breadcrumb -->
        <nav class="mb-6" aria-label="breadcrumb">
            <ol class="flex items-center space-x-2 bg-white rounded-lg shadow-sm p-4">
                <li>
                    <a href="@Url.Action("Index", "Home")" class="text-olive-green-600 hover:text-olive-green-700">
                        <i class="fas fa-home mr-2"></i>Inicio
                    </a>
                </li>
                <li class="text-olive-green-500">
                    <i class="fas fa-chevron-right text-sm"></i>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Banners")"
                       class="text-olive-green-600 hover:text-olive-green-700">
                        Banners
                    </a>
                </li>
                <li class="text-olive-green-500">
                    <i class="fas fa-chevron-right text-sm"></i>
                </li>
                <li class="text-dark-chocolate font-medium">Eliminar</li>
            </ol>
        </nav>

        <!-- Header -->
        <div class="glass-effect rounded-2xl p-6 shadow-olive-green/30 flex flex-col sm:flex-row justify-between gap-4">
            <div>
                <h1 class="text-3xl font-bold text-dark-chocolate flex items-center gap-3">
                    <i class="fas fa-image text-olive-green-600 mr-2" ></i>
                    Banner  @Model.Seccion
                </h1>
            </div>

            <div class="flex gap-2">
                <form action="@($"/Configuracion/Banners/Eliminar")" method="post" id="formBanner" class="slide-in delay-400">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <button type="submit"
                            class="inline-flex items-center gap-2 bg-white text-red-700 px-6 py-3 rounded-lg font-semibold hover:bg-red-50 transition-all duration-200 shadow-md">
                        <i class="fas fa-trash-alt mr-2"></i>Eliminar
                    </button>
                </form>

                <a href="@Url.Action("Index", "Banners")"
                   class="inline-flex items-center gap-2 bg-amber-700 text-white px-6 py-3 rounded-lg font-semibold hover:bg-amber-600 transition-all duration-200 shadow-md">
                    <i class="fas fa-arrow-left mr-2"></i>Volver
                </a>
            </div>
        </div>

        <!-- Contenido -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

            <!-- Informaciín -->
            <div class="lg:col-span-2 space-y-6">
                <div class="glass-effect rounded-2xl p-6 shadow-nut-brown/30">
                    <h5 class="text-xl font-semibold text-dark-chocolate mb-6 pb-4 border-b-2 border-olive-green-300 flex items-center">
                        <i class="fas fa-info-circle text-olive-green-600 mr-2" ></i>
                        Información del Banner
                    </h5>

                    <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <dt class="text-sm text-gray-500">Sección</dt>
                            <dd class="font-semibold text-dark-chocolate">@Model.Seccion</dd>
                            <input hidden asp-for="Seccion" class="w-full px-4 py-3 text-lg border-2 border-gray-300 rounded-lg focus:border-olive-green-500  ring-olive-green-500  outline-none transition-all duration-300" placeholder="Home, Ofertas..." required />

                        </div>

                        <div>
                            <dt class="text-sm text-gray-500">Alt Text</dt>
                            <dd>@Model.AltText</dd>
                        </div>

                        <div class="sm:col-span-2">
                            <dt class="text-sm text-gray-500">Título</dt>
                            <dd class="text-xl font-bold text-dark-chocolate">@Model.Titulo</dd>
                        </div>

                        <div class="sm:col-span-2">
                            <dt class="text-sm text-gray-500">Subtítulo</dt>
                            <dd class="text-gray-700">@Model.Subtitulo</dd>
                        </div>

                        <div>
                            <dt class="text-sm text-gray-500">Texto del botón</dt>
                            <dd>@Model.BotonTexto</dd>
                        </div>

                        <div>
                            <dt class="text-sm text-gray-500">Enlace del botón</dt>
                            <dd class="font-mono text-sm text-blue-600">
                                <a href="@Model.BotonEnlace" target="_blank">
                                    @Model.BotonEnlace
                                </a>
                            </dd>
                        </div>
                    </dl>
                </div>

                <!-- Vista previa -->
                <div class="glass-effect rounded-2xl p-6 shadow-nut-brown/30">
                    <h5 class="text-xl font-semibold text-dark-chocolate mb-6 pb-4 border-b-2 border-olive-green-300 flex items-center">
                        <i class="fas fa-eye text-olive-green-600 mr-2"></i>
                        Vista previa en el sitio
                    </h5>

                    @await Html.PartialAsync("~/Infrastructure/Web/Views/Shared/Components/Banners/_BannerItem.cshtml", Model);
                </div>
            </div>

            <!-- Imagen -->
            <div class="space-y-6">
                <div class="relative h-64 bg-gray-200 flex items-center justify-center rounded-xl">
                    <img src="@Model.Image" id="ImagePreview" class="absolute inset-0 w-full h-full object-cover" />
                    <div class="absolute inset-0 bg-black/40"></div>

                    <div class="relative flex flex-col items-center justify-center h-full text-center text-white px-4 z-10">
                        <p id="SubtituloPreview" class="uppercase tracking-widest text-xs sm:text-sm md:text-base">@Model.Subtitulo</p>
                        <h1 id="TituloPreview" class="text-xl sm:text-3xl md:text-5xl font-extrabold mt-2">@Model.Titulo</h1>
                        <span class="mt-4 inline-block bg-white text-black font-semibold px-4 sm:px-6 py-2 sm:py-3 rounded-full shadow-md hover:bg-gray-200 transition">
                            @Model.BotonTexto
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="Mensaje" value="@TempData["mensaje"]" />
<input type="hidden" id="Estado" value="@TempData["estado"]" />

@section Scripts {
    <script type="module" src="~/js/application/banners/delete.js"></script>
}
