<!-- FOOTER -->
@model Ecommers.Domain.Entities.ConfiguracionesD

@{
    var config = Model ?? new Ecommers.Domain.Entities.ConfiguracionesD
            {
                Id = 0,
                MetaTitulo = "Mi Aplicación",
                MetaDescripcion = "Descripción predeterminada",
                MetaKeywords = "ecommerce, tienda",
                Favicon = "/favicon.ico",
                MetaViewport = "width=device-width, initial-scale=1"
            };
}
<footer class="py-12" style="background-color: var(--color-dark-chocolate);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-white">
            <div>
                <h3 class="font-bold text-xl mb-4" style="color: var(--color-golden-yellow);">Sobre Nosotros</h3>
                <p class="text-sm opacity-80  mb-4">Tu tienda de confianza para productos naturales y saludables.</p>
                <h3 class="font-bold text-xl mb-4" style="color: var(--color-golden-yellow);">Sucursales</h3>
                <p class="text-sm opacity-80  mb-4">  @config.Direccion</p>
            </div>
            <div>
                <h3 class="font-bold text-xl mb-4" style="color: var(--color-golden-yellow);">Enlaces Rápidos</h3>
                <ul class="space-y-2 text-sm">
                    <li><a href="#" class="opacity-80 hover:opacity-100">Productos</a></li>
                    <li><a href="#" class="opacity-80 hover:opacity-100">Ofertas</a></li>
                    <li><a href="#" class="opacity-80 hover:opacity-100">Blog</a></li>
                    <li><a href="#" class="opacity-80 hover:opacity-100">Contacto</a></li>
                </ul>
            </div>
            <div>
                <h3 class="font-bold text-xl mb-4" style="color: var(--color-golden-yellow);">Ayuda</h3>
                <ul class="space-y-2 text-sm">
                    <li><a href="#" class="opacity-80 hover:opacity-100">Preguntas Frecuentes</a></li>
                    <li><a href="#" class="opacity-80 hover:opacity-100">Envíos</a></li>
                    <li><a href="#" class="opacity-80 hover:opacity-100">Devoluciones</a></li>
                    <li><a href="#" class="opacity-80 hover:opacity-100">Términos y Condiciones</a></li>
                </ul>
            </div>
            <div>
                <h3 class="font-bold text-xl mb-4" style="color: var(--color-golden-yellow);">Síguenos</h3>
                <div class="flex gap-4">
                    @if (!string.IsNullOrEmpty(Model?.Facebook))
                    {
                        <a href="@Model?.Facebook" class="w-10 h-10 rounded-full flex items-center justify-center hover:scale-110 transition-all" style="background-color: var(--color-golden-yellow);">
                            <i class="fab fa-facebook-f" style="color: var(--color-dark-chocolate);"></i>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(Model?.Instagram))
                    {
                        <a href="@Model?.Instagram" class="w-10 h-10 rounded-full flex items-center justify-center hover:scale-110 transition-all" style="background-color: var(--color-golden-yellow);">
                            <i class="fab fa-instagram" style="color: var(--color-dark-chocolate);"></i>
                        </a>
                    }
                    @if (!string.IsNullOrEmpty(Model?.Twitter))
                    {
                        <a href="@Model?.Twitter" class="w-10 h-10 rounded-full flex items-center justify-center hover:scale-110 transition-all" style="background-color: var(--color-golden-yellow);">
                            <i class="fab fa-twitter" style="color: var(--color-dark-chocolate);"></i>
                        </a>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model?.Tiktok))
                    {
                        <a href="@Model?.Tiktok" class="w-10 h-10 rounded-full flex items-center justify-center hover:scale-110 transition-all" style="background-color: var(--color-golden-yellow);">
                            <i class="fab fa-twitter" style="color: var(--color-dark-chocolate);"></i>
                        </a>
                    }
                </div>
            </div>
        </div>
        <div class="border-t border-white border-opacity-20 mt-8 pt-8 text-center text-sm text-white opacity-60">
            <p>&copy; 2024 Frutos Secos & Naturales. Todos los derechos reservados.</p>
        </div>
    </div>
</footer>
