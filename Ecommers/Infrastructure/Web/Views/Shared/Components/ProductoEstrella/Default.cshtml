  <!-- Producto Estrella con diseño diagonal -->
@model IEnumerable<Ecommers.Infrastructure.Persistence.Entities.vw_ProductStarMetrics>
@{
	var productoStar = Model?.FirstOrDefault();


}
@if (productoStar != null)
{
    <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="relative overflow-hidden rounded-3xl" style="background: linear-gradient(135deg, var(--color-golden-yellow) 0%, var(--color-orange-warm) 100%);">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center p-12">
                    <div class="order-2 lg:order-1">
                        <span class="inline-block px-4 py-2 rounded-full text-sm font-bold mb-4" style="background-color: var(--color-burgundy-red); color: white;">
                            ⭐ PRODUCTO ESTRELLA
                        </span>
                        <h2 class="text-5xl font-bold mb-6 text-white">
							@productoStar.VariantName
                        </h2>
                        <p class="text-xl mb-6 text-white">
                            @productoStar.Description
                        </p>
                        @if (!string.IsNullOrEmpty(productoStar.Atributos))
                        {
                            var atributos = productoStar.Atributos.Split(',');

                            <ul class="mb-8 space-y-3">
                                @foreach (var atributo in atributos)
                                {
                                    <li class="flex items-center text-white">
                                        <i class="fas fa-check-circle mr-3 text-2xl"></i>
                                        <span class="text-lg">@atributo.Trim()</span>
                                    </li>
                                }
                            </ul>
                        }
                        <div class="flex items-center gap-6 mb-8">
                            <span class="text-5xl font-bold text-white">$@productoStar.Price</span>
                            <span class="text-2xl line-through" style="color: rgba(255,255,255,0.7);">$34.99</span>
                        </div>
                        <button class="px-10 py-5 bg-white rounded-full font-bold text-xl hover:scale-105 transition-all shadow-xl" style="color: var(--color-orange-warm);">
                            <i class="fas fa-shopping-cart mr-3"></i>Agregar al Carrito
                        </button>
                    </div>
                    <div class="order-1 lg:order-2">
                        <div class="relative">
                            <div class="absolute -top-10 -right-10 w-64 h-64 rounded-full opacity-20" style="background-color: var(--color-burgundy-red);"></div>
                            <img src="@productoStar.ImageUrl" alt="@productoStar.VariantName" class="relative z-10 rounded-3xl shadow-2xl">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
