@model Ecommers.Domain.Entities.CategoriesD

<a href="#" class="group block h-full">
    <div class="relative h-full flex flex-col rounded-3xl overflow-hidden shadow-xl
                bg-gradient-to-br @Model.BgClass
                transition-all duration-500 ease-out
                hover:shadow-2xl hover:scale-[1.02] hover:-translate-y-2">

        <!-- Top Badges Container -->
        <div class="absolute top-0 left-0 right-0 z-20 flex justify-between items-start p-4">
            <!-- Product Count Badge -->
            <div class="bg-white/95 backdrop-blur-md text-gray-800 text-xs font-semibold
                        px-3 py-2 rounded-full shadow-lg flex items-center gap-2
                        transition-all duration-300 group-hover:bg-white group-hover:scale-105">
                <i class="fas fa-cube text-olive-green-600"></i>
                <span id="ProductCountPreview" class="font-bold">@Model.CantidadProductos</span>
                <span class="text-gray-600">productos</span>
            </div>

            <!-- New Badge -->
            @if (Model.EsNuevo)
            {
                <div class="bg-gradient-to-r from-burgundy-red-500 to-burgundy-red-600
                                text-white text-xs font-bold px-4 py-2 rounded-full
                                shadow-lg flex items-center gap-2 animate-pulse">
                    <i class="fas fa-sparkles"></i>
                    <span>Nuevo</span>
                </div>
            }
        </div>

        <!-- Content Container -->
        <div class="flex-1 flex flex-col items-center justify-center text-center p-8 pt-16 pb-10 relative z-10">

            <!-- Image Container with Decorative Circle -->
            <div class="relative mb-6">
                <!-- Decorative outer ring -->
                <div class="absolute inset-0 -m-3 rounded-full border-4 border-white/40
                            transition-all duration-500 group-hover:scale-110 group-hover:border-white/60"></div>

                <!-- Glow effect -->
                <div class="absolute inset-0 rounded-full bg-white/20 blur-xl
                            opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

                <!-- Image -->
                <div class="relative w-32 h-32 rounded-full overflow-hidden shadow-2xl
                            border-4 border-white/80 backdrop-blur-sm
                            transition-all duration-500 group-hover:scale-110 group-hover:rotate-6">
                    <img id="ImageFilePreview"
                         src="@Model.Image"
                         alt="@Model.Name"
                         class="w-full h-full object-cover transition-transform duration-700
                                group-hover:scale-125" />

                    <!-- Overlay gradient on hover -->
                    <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent
                                opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
            </div>

            <!-- Category Name -->
            <h3 id="NamePreview"
                class="text-2xl md:text-3xl font-bold text-white mb-3
                       drop-shadow-[0_2px_8px_rgba(0,0,0,0.3)]
                       transition-all duration-300 group-hover:scale-105">
                @Model.Name
            </h3>

            <!-- Short Description -->
            <p id="ShortDescriptionPreview"
               class="text-sm md:text-base text-white/95 leading-relaxed max-w-xs
                      drop-shadow-md line-clamp-2
                      transition-all duration-300 group-hover:text-white">
                @Model.ShortDescription
            </p>

            <!-- Hover Action Indicator -->
            <div class="mt-6 flex items-center gap-2 text-white/80 text-sm font-medium
                        opacity-0 group-hover:opacity-100 transition-all duration-300
                        transform translate-y-2 group-hover:translate-y-0">
                <span>Ver productos</span>
                <i class="fas fa-arrow-right text-xs transition-transform duration-300
                          group-hover:translate-x-1"></i>
            </div>
        </div>

        <!-- Bottom gradient overlay for depth -->
        <div class="absolute bottom-0 left-0 right-0 h-32
                    bg-gradient-to-t from-black/20 to-transparent
                    pointer-events-none"></div>

        <!-- Decorative corner accent -->
        <div class="absolute top-0 right-0 w-24 h-24
                    bg-gradient-to-br from-white/20 to-transparent
                    rounded-bl-full opacity-50 group-hover:opacity-70
                    transition-opacity duration-300"></div>
    </div>
</a>
