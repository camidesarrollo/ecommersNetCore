@using Ecommers.Domain.Extensions
@using Ecommers.Infrastructure.Web.Models.Products
@model ProductsDetailsViewModel
@{
    var MasterAttributes = Model.MasterAttributes.ToList();
    ViewData["Title"] = "Eliminar Producto";
    Layout = "~/Infrastructure/Web/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/css/swiper-bundle.min.css" />
<link rel="stylesheet" href="~/css/swiper-custom.css" />
<script type="module" src="~/js/bundle/vendors_swiper.js"></script>

<div class="bg-pattern min-h-screen py-8 px-4">
    <div class="mx-auto space-y-6">
        <!-- Breadcrumb -->
        <nav class="mb-6" aria-label="breadcrumb">
            <ol class="flex items-center space-x-2 bg-white rounded-lg shadow-sm p-4">
                <li>
                    <a href="@Url.Action("Index", "Home")" class="text-olive-green-600 hover:text-olive-green-700">
                        <i class="fas fa-home mr-2"></i>Inicio
                    </a>
                </li>
                <li class="text-olive-green-500"><i class="fas fa-chevron-right text-sm"></i></li>
                <li>
                    <a href="/Gestion/Products/Index" class="text-olive-green-600 hover:text-olive-green-700">Categorías</a>
                </li>
                <li class="text-olive-green-500"><i class="fas fa-chevron-right text-sm"></i></li>
                <li class="text-dark-chocolate font-medium">Detalle</li>
            </ol>
        </nav>

        <!-- Header -->
        <div class="glass-effect rounded-2xl p-6 shadow-olive-green/30 flex flex-col sm:flex-row justify-between gap-4">
            <div>
                <h1 class="text-3xl font-bold text-dark-chocolate flex items-center gap-3">
                    <i class="fas fa-folder-open text-olive-green-600"></i>
                    @Model.Products.Name
                </h1>
            </div>
            <div class="flex gap-2">
                <form action="@($"/Gestion/Products/Eliminar/{Model.Products.Id}")"
                          method="post"
                          enctype="multipart/form-data"
                          id="formProducts">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="@Model.Products.Id" />
                    <button type="submit" class="inline-flex items-center gap-2 bg-white text-amber-900 px-6 py-3 rounded-lg font-semibold hover:bg-amber-50 transition-all duration-200 shadow-md">
                        <i class="fas fa-edit mr-2"></i>Eliminar
                    </button>
                </form>
                <a href="/Gestion/Products/Index" class="inline-flex items-center gap-2 bg-amber-700 text-white px-6 py-3 rounded-lg font-semibold hover:bg-amber-600 transition-all duration-200 shadow-md">
                    <i class="fas fa-arrow-left mr-2"></i>Volver
                </a>
            </div>
        </div>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <div class="lg:col-span-2 space-y-6">
                <section class="glass-effect rounded-2xl p-4 sm:p-6">
                    <h5 class="text-lg sm:text-xl font-semibold text-dark-chocolate mb-4 sm:mb-6 pb-3 sm:pb-4 border-b-2 border-olive-green-300 flex items-center">
                        <i class="fas fa-info-circle text-olive-green-600 mr-2 text-base sm:text-lg"></i>
                        Información
                    </h5>

                    <dl class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6">
                        <div>
                            <dt class="text-sm text-gray-500">Nombre</dt>
                            <dd id="nombre" class="font-semibold text-dark-chocolate">@Model.Products.Name</dd>
                        </div>
                        <div>
                            <dt class="text-sm text-gray-500">Slug</dt>
                            <dd class="font-mono text-sm">@Model.Products.Slug</dd>
                        </div>
                        <div>
                            <dt class="text-sm text-gray-500">Categoría</dt>
                            <dd class="font-semibold text-dark-chocolate">@Model.Products.Category.Name</dd>
                        </div>
                        <div>
                            <dt class="text-sm text-gray-500">Precio de base</dt>
                            <dd class="font-semibold text-dark-chocolate">@Model.Products.BasePrice</dd>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(Model.Products.ShortDescription))
                        {
                            <div class="col-span-full">
                                <dt class="text-sm text-gray-500 mb-1">Descripción corta</dt>
                                <dd class="text-gray-700">@Model.Products.ShortDescription</dd>
                            </div>
                        }

                        @if (!string.IsNullOrWhiteSpace(Model.Products.Description))
                        {
                            <div class="col-span-full">
                                <dt class="text-sm text-gray-500 mb-1">Descripción completa</dt>
                                <dd class="text-gray-700">@Model.Products.Description</dd>
                            </div>
                        }
                    </dl>
                </section>
                @if (Model.Products.ProductImages.Any())
                {
                    <section class="glass-effect rounded-2xl p-6 product-images-wrapper">
                        <h5 class="text-xl font-semibold text-dark-chocolate mb-6 pb-4 border-b-2 border-olive-green-300 flex items-center">
                            <i class="fas fa-images text-olive-green-600 mr-2"></i>
                            Imágenes del producto
                        </h5>
                        <!-- Carrucel de imagenes -->
                        <swiper slides-per-view="2"
                                space-between="16"
                                breakpoints='{
                                "320":  { "slidesPerView": 1 },
                                "640":  { "slidesPerView": 2 },
                                "768":  { "slidesPerView": 3 },
                                "1024": { "slidesPerView": 3 },
                                "1440": { "slidesPerView": 4 }
                            }'
                                class="pb-6">

                            @foreach (var image in Model.Products.ProductImages.OrderBy(x => x.SortOrder))
                            {
                                <swiper-slide>
                                    @if (!string.IsNullOrEmpty(image.Url))
                                    {
                                        <img src="@image.Url" alt="Producto" loading="lazy" />
                                    }
                                    else
                                    {
                                        <div class="flex items-center justify-center h-full text-gray-400">
                                            Sin imagen
                                        </div>
                                    }

                                </swiper-slide>
                            }

                        </swiper>
                    </section>
                }

                <!-- Características de la variante -->
                @if (Model.Products.ProductAttributes.Any())
                {
                    <section class="glass-effect rounded-2xl p-6">
                        <h5 class="text-xl font-semibold text-dark-chocolate mb-6 pb-4 border-b-2 border-olive-green-300 flex items-center">
                            <i class="fas fa-sliders-h text-olive-green-600 mr-2"></i>
                            Características
                        </h5>
                        <dl class="grid grid-cols-1 gap-2">
                            @foreach (var attr in MasterAttributes)
                            {
                                var values = Model.Products.ProductAttributes
                                .Where(x =>
                                x.Attribute != null &&
                                x.Attribute.Id == attr.Id &&
                                x.Value != null
                                )
                                .Select(x => x.Value!.GetDisplayValue())
                                .Where(x => !string.IsNullOrEmpty(x))
                                .ToList();

                                @if (values.Any())
                                {
                                    <div>
                                        <dt class="text-xs text-gray-500">@attr.Name</dt>
                                        <dd class="font-semibold text-dark-chocolate text-sm">
                                            @if (values.Count == 1 && values.Contains("True"))
                                            {
                                                values[0] = "Si";
                                            }




                                            @string.Join(", ", values)

                                        </dd>
                                    </div>
                                }
                            }
                        </dl>

                    </section>
                }
            </div>
            <!-- Columna Lateral (1/3) -->
            <aside class="lg:col-span-1 space-y-6">
                <div class="glass-effect rounded-2xl p-6 shadow-nut-brown/30">
                    <!-- Encabezado con botón de agregar -->
                    <div class="flex items-center justify-between mb-6 pb-4 border-b-2 border-olive-green-300">
                        <h5 class="text-xl font-semibold text-dark-chocolate flex items-center">
                            <i class="fas fa-layer-group text-olive-green-600 mr-2"></i>
                            Variantes del producto
                        </h5>
                    </div>

                    <!-- Contenedor de variantes -->
                    <div class="space-y-4">
                        @foreach (var variant in Model.Products.ProductVariants)
                        {
                            bool isLast = variant == Model.Products.ProductVariants.Last();
                            <div class="border-2 border-olive-green-200 rounded-xl p-4 bg-white  @(isLast ? "" : "mb-4")">
                                <!-- Información básica de la variante -->
                                <h6 class="text-lg font-bold text-dark-chocolate mb-4 flex items-center gap-2">
                                    @if (variant.IsDefault)
                                    {
                                        <i class="fas fa-star text-amber-500"></i>
                                    }
                                    @variant.Name
                                </h6>

                                <dl class="grid grid-cols-1 gap-3 mb-4">
                                    <div>
                                        <dt class="text-sm text-gray-500">SKU</dt>
                                        <dd class="font-mono text-sm text-dark-chocolate">@variant.SKU</dd>
                                    </div>
                                    <div>
                                        <dt class="text-sm text-gray-500">Precio Costo</dt>
                                        <dd class="font-semibold text-dark-chocolate">@variant.CostPrice</dd>
                                    </div>
                                    <div>
                                        <dt class="text-sm text-gray-500">Precio</dt>
                                        <dd class="font-semibold text-dark-chocolate text-lg">@variant.Price.ToString("C")</dd>
                                    </div>
                                    @if (variant.CompareAtPrice.HasValue && variant.CompareAtPrice > 0)
                                    {
                                        <div>
                                            <dt class="text-sm text-gray-500">Precio de comparación</dt>
                                            <dd class="font-semibold text-gray-500 line-through">@variant.CompareAtPrice.Value.ToString("C")</dd>
                                        </div>
                                    }
                                    <div>
                                        <dt class="text-sm text-gray-500">Stock</dt>
                                        <dd class="font-semibold text-dark-chocolate">@variant.StockQuantity unidades</dd>
                                    </div>
                                    <div>
                                        <dt class="text-sm text-gray-500">Estado del stock</dt>
                                        <dd>
                                            @if (variant.StockStatus == "in_stock")
                                            {
                                                <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full bg-mint-green-100 text-green-700 text-sm font-semibold">
                                                    <i class="fas fa-check-circle"></i> En stock
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full bg-red-100 text-red-700 text-sm font-semibold">
                                                    <i class="fas fa-times-circle"></i> Sin stock
                                                </span>
                                            }
                                        </dd>
                                    </div>
                                    <div>
                                        <dt class="text-sm text-gray-500">Estado</dt>
                                        <dd>
                                            @if (variant.IsActive)
                                            {
                                                <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full bg-mint-green-100 text-green-700 text-sm font-semibold">
                                                    <i class="fas fa-toggle-on"></i> Activa
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full bg-gray-200 text-gray-600 text-sm font-semibold">
                                                    <i class="fas fa-toggle-off"></i> Inactiva
                                                </span>
                                            }
                                        </dd>
                                    </div>
                                </dl>

                                <!-- Características de la variante -->
                                @if (MasterAttributes.Any() && variant.VariantAttributes.Any())
                                {
                                    <div class="border-t border-gray-200 pt-4 mt-4">
                                        <h6 class="text-sm font-semibold text-dark-chocolate mb-3 flex items-center">
                                            <i class="fas fa-tags text-olive-green-600 mr-2 text-xs"></i>
                                            Características
                                        </h6>
                                        <dl class="grid grid-cols-1 gap-2">
                                            @foreach (var attr in MasterAttributes)
                                            {
                                                var values = variant.VariantAttributes
                                                .Where(x => x.Attribute.Id == attr.Id && x.Value != null)
                                                .Select(x => x.Value.GetDisplayValue())
                                                .Where(x => !string.IsNullOrEmpty(x))
                                                .ToList();

                                                @if (values.Any())
                                                {
                                                    <div>
                                                        <dt class="text-xs text-gray-500">@attr.Name</dt>
                                                        <dd class="font-semibold text-dark-chocolate text-sm">
                                                            @if (values.Count == 1 && values.Contains("True"))
                                                            {
                                                                values[0] = "Si";
                                                            }




                                                            @string.Join(", ", values)

                                                        </dd>
                                                    </div>
                                                }
                                            }
                                        </dl>
                                    </div>
                                }

                                <!-- Imágenes de la variante -->
                                @if (variant.ProductVariantImages.Any())
                                {
                                    <div class="border-t border-gray-200 pt-4 mt-4">
                                        <h6 class="text-sm font-semibold text-dark-chocolate mb-3 flex items-center">
                                            <i class="fas fa-images text-olive-green-600 mr-2 text-xs"></i>
                                            Imágenes (@variant.ProductVariantImages.Count)
                                        </h6>
                                        <div class="space-y-3">
                                            @foreach (var variantImage in variant.ProductVariantImages.OrderBy(x => x.SortOrder))
                                            {
                                                <div class="border border-gray-200 rounded-lg p-2">
                                                    @if (!string.IsNullOrEmpty(variantImage.Url))
                                                    {
                                                        <img src="@variantImage.Url" class="w-full rounded-lg shadow-sm mb-2" alt="@variantImage.AltText" />
                                                    }
                                                    else
                                                    {
                                                        <div class="text-gray-500 text-xs text-center p-4 bg-gray-50 rounded-lg mb-2">
                                                            Sin imagen
                                                        </div>
                                                    }

                                                    <div class="flex items-center justify-between text-xs">
                                                        <span class="text-gray-500">Orden: @variantImage.SortOrder</span>
                                                        <div class="flex gap-2">
                                                            @if (variantImage.IsPrimary)
                                                            {
                                                                <span class="px-2 py-1 rounded bg-amber-100 text-amber-700">
                                                                    <i class="fas fa-star"></i> Principal
                                                                </span>
                                                            }
                                                            @if (variantImage.IsActive)
                                                            {
                                                                <span class="px-2 py-1 rounded bg-green-100 text-green-700">
                                                                    <i class="fas fa-eye"></i>
                                                                </span>
                                                            }
                                                            else
                                                            {
                                                                <span class="px-2 py-1 rounded bg-gray-100 text-gray-600">
                                                                    <i class="fas fa-eye-slash"></i>
                                                                </span>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    <div class="border-t border-gray-200 pt-4 mt-4">
                    </div>
                </div>
            </aside>
        </div>
    </div>

</div>
<input type="hidden" id="Mensaje" name="Mensaje" value="@TempData["mensaje"]" />
<input type="hidden" id="Estado" name="Estado" value="@TempData["estado"]" />
@section Scripts {


    <script type="module" src="~/js/application/products/generic.js"></script>
    <script type="module" src="~/js/application/products/delete.js"></script>
}
