@using Ecommers.Web.Models.Products
@model ProductVariantViewModel

<div class="variant-item border-2 border-olive-green-200 rounded-xl p-4 bg-white mb-4" data-variant-index="@Model.Index">
    <div class="flex items-center justify-between mb-4">
        <h6 class="text-lg font-bold text-dark-chocolate flex items-center gap-2">
            <i class="fas fa-cube text-olive-green-600"></i>
            <span>Variante #<span class="variant-number">@(Model.Index + 1)</span></span>
        </h6>
        <button type="button"
                onclick="removeVariant(@Model.Index)"
                class="text-red-500 hover:text-red-700 transition">
            <i class="fas fa-trash-alt"></i>
        </button>
    </div>

    <div class="space-y-4">
        <!-- Nombre de la variante -->
        <div>
            <label class="block text-sm font-semibold text-dark-chocolate mb-2">
                Nombre de la variante
                <span class="text-red-500">*</span>
            </label>
            <input type="text"
                   name="ProductVariants[@Model.Index].Name"
                   class="w-full px-4 py-2 border-2 border-olive-green-200 rounded-lg focus:outline-none focus:border-olive-green-500"
                   placeholder="Ej: Talla M - Color Rojo"
                   required />
        </div>

        <!-- SKU -->
        <div>
            <label class="block text-sm font-semibold text-dark-chocolate mb-2">
                SKU
                <span class="text-red-500">*</span>
            </label>
            <input type="text"
                   name="ProductVariants[@Model.Index].SKU"
                   class="w-full px-4 py-2 border-2 border-olive-green-200 rounded-lg focus:outline-none focus:border-olive-green-500 font-mono"
                   placeholder="Ej: PROD-001-M-RED"
                   required />
        </div>

        <!-- Grid de precios -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <!-- Precio Costo -->
            <div>
                <label class="block text-sm font-semibold text-dark-chocolate mb-2">
                    Precio Costo
                    <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                    <input type="number"
                           name="ProductVariants[@Model.Index].CostPrice"
                           class="w-full pl-8 pr-4 py-2 border-2 border-olive-green-200 rounded-lg focus:outline-none focus:border-olive-green-500"
                           step="0.01"
                           min="0"
                           placeholder="0.00"
                           required />
                </div>
            </div>

            <!-- Precio -->
            <div>
                <label class="block text-sm font-semibold text-dark-chocolate mb-2">
                    Precio
                    <span class="text-red-500">*</span>
                </label>
                <div class="relative">
                    <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                    <input type="number"
                           name="ProductVariants[@Model.Index].Price"
                           class="w-full pl-8 pr-4 py-2 border-2 border-olive-green-200 rounded-lg focus:outline-none focus:border-olive-green-500"
                           step="0.01"
                           min="0"
                           placeholder="0.00"
                           required />
                </div>
            </div>

            <!-- Precio de comparación -->
            <div>
                <label class="block text-sm font-semibold text-dark-chocolate mb-2">
                    Precio de comparación
                </label>
                <div class="relative">
                    <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                    <input type="number"
                           name="ProductVariants[@Model.Index].CompareAtPrice"
                           class="w-full pl-8 pr-4 py-2 border-2 border-olive-green-200 rounded-lg focus:outline-none focus:border-olive-green-500"
                           step="0.01"
                           min="0"
                           placeholder="0.00" />
                </div>
            </div>

            <!-- Stock -->
            <div>
                <label class="block text-sm font-semibold text-dark-chocolate mb-2">
                    Stock
                    <span class="text-red-500">*</span>
                </label>
                <input type="number"
                       name="ProductVariants[@Model.Index].StockQuantity"
                       class="w-full px-4 py-2 border-2 border-olive-green-200 rounded-lg focus:outline-none focus:border-olive-green-500"
                       min="0"
                       placeholder="0"
                       required />
            </div>
        </div>

        <!-- Checkboxes -->
        <div class="flex flex-wrap gap-4 pt-2">
            <label class="flex items-center gap-2 cursor-pointer">
                <input type="checkbox"
                       name="ProductVariants[@Model.Index].IsDefault"
                       class="w-4 h-4 text-olive-green-600 border-gray-300 rounded focus:ring-olive-green-500" />
                <span class="text-sm text-dark-chocolate">
                    <i class="fas fa-star text-amber-500"></i>
                    Variante predeterminada
                </span>
            </label>

            <label class="flex items-center gap-2 cursor-pointer">
                <input type="checkbox"
                       name="ProductVariants[@Model.Index].IsActive"
                       class="w-4 h-4 text-olive-green-600 border-gray-300 rounded focus:ring-olive-green-500"
                       checked="@Model.IsActive" />
                <span class="text-sm text-dark-chocolate">
                    <i class="fas fa-toggle-on text-green-600"></i>
                    Activa
                </span>
            </label>
        </div>

        <!-- Sección de atributos (opcional - según tus necesidades) -->
        <div class="border-t border-gray-200 pt-4 mt-4">
            <h6 class="text-sm font-semibold text-dark-chocolate mb-3 flex items-center">
                <i class="fas fa-tags text-olive-green-600 mr-2 text-xs"></i>
                Características
            </h6>
            <div class="text-sm text-gray-500">
                Las características se configurarán según los atributos del producto
            </div>
        </div>

        <!-- Sección de imágenes -->
        <div class="border-t border-gray-200 pt-4 mt-4">
            <div class="flex items-center justify-between mb-3">
                <h6 class="text-sm font-semibold text-dark-chocolate flex items-center">
                    <i class="fas fa-images text-olive-green-600 mr-2 text-xs"></i>
                    Imágenes
                </h6>
                <button type="button"
                        onclick="addVariantImage(@Model.Index)"
                        class="text-sm px-3 py-1 rounded bg-olive-green-100 text-olive-green-700 hover:bg-olive-green-200 transition">
                    <i class="fas fa-plus mr-1"></i> Agregar imagen
                </button>
            </div>
            <div id="variantImages_@Model.Index" class="space-y-2">
                <!-- Las imágenes se agregarán dinámicamente aquí -->
            </div>
        </div>
    </div>

    <!-- Hidden inputs -->
    <input type="hidden" name="ProductVariants[@Model.Index].Id" value="@Model.Id" />
</div>