@model Ecommers.Web.Models.Products.ProductsCreateViewModel

@{
    ViewData["Title"] = "Crear Producto";
    Layout = "~/Web/Views/Shared/_LayoutAdmin.cshtml";

    var MasterAttributes = Model.MasterAttributes.ToList();
    var ProductImages = Model.ProductImages.ToList();
}

@section Styles {
    <link rel="stylesheet" href="~/css/shepherd.css">
    <link rel="stylesheet" href="~/css/select2.min.css">
}

<div class="bg-pattern min-h-screen py-8 px-4">
    <div class="max-w-7xl mx-auto">

        <!-- Breadcrumb -->
        <nav class="mb-6 slide-in" aria-label="breadcrumb">
            <ol class="flex items-center space-x-2 bg-white rounded-lg shadow-sm p-4">
                <li>
                    <a href="@Url.Action("Index", "Home")" class="text-olive-green-600 hover:text-olive-green-700 flex items-center">
                        <i class="fas fa-home mr-2"></i>Inicio
                    </a>
                </li>
                <li class="text-olive-green-500"><i class="fas fa-chevron-right text-sm"></i></li>
                <li>
                    <a href="@Url.Action("Index", "Products")" class="text-olive-green-600 hover:text-olive-green-700">
                        Productos
                    </a>
                </li>
                <li class="text-olive-green-500"><i class="fas fa-chevron-right text-sm"></i></li>
                <li class="text-dark-chocolate font-medium">Crear Producto</li>
            </ol>
        </nav>

        <!-- Header -->
        <div class="mb-6 slide-in delay-200">
            <div class="glass-effect rounded-2xl p-6 shadow-olive-green/30">
                <div class="flex justify-between items-center flex-wrap gap-4">
                    <div>
                        <h1 class="text-3xl font-bold text-dark-chocolate mb-2 flex items-center">
                            <i class="fas fa-image text-olive-green-600 mr-3"></i>
                            Nuevo Producto
                        </h1>
                        <p class="text-gray-600">Complete los campos para crear un nuevo producto</p>
                    </div>
                    <div class="flex gap-3">
                        <!-- Botón de ayuda en header -->
                        <button id="help-tour-button"
                                type="button"
                                class="help-button-header"
                                title="Iniciar tour guiado">
                            <i class="fas fa-question-circle"></i>
                            <span>Ayuda</span>
                        </button>

                        <!-- Botón volver -->
                        <a href="@Url.Action("Index", "Products")"
                           class="inline-flex items-center px-6 py-3 bg-gray-light rounded-lg text-dark-chocolate font-semibold hover:bg-gray-light-dark transition-all" id="volver-button">
                            <i class="fas fa-arrow-left mr-2"></i>Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- FORM -->
        <form asp-action="Crear"
              method="post"
              enctype="multipart/form-data"
              id="formProducts"
              class="slide-in delay-400">

            @Html.AntiForgeryToken()

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

                <!-- CONTENIDO PRINCIPAL -->
                <section class="lg:col-span-2 space-y-6">

                    <!-- Información del producto -->
                    <div class="glass-effect rounded-2xl p-6">
                        <h5 class="text-xl font-semibold text-dark-chocolate mb-6 pb-4 border-b-2 border-olive-green-300 flex items-center">
                            <i class="fas fa-info-circle text-olive-green-600 mr-2"></i>
                            Información del producto
                        </h5>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                            <!-- Nombre -->
                            <div>
                                <label asp-for="Products.Name" class="block font-semibold mb-2">
                                    Nombre <span class="text-red-700">*</span>
                                </label>
                                <input type="text"
                                       asp-for="Products.Name"
                                       required
                                       class="w-full px-4 py-3 text-lg border-2 border-gray-300 rounded-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition" />
                                <span asp-validation-for="Products.Name" class="text-red-700 text-sm"></span>
                            </div>

                            <!-- Slug -->
                            <div>
                                <label asp-for="Products.Slug" class="block font-semibold mb-2">
                                    Slug URL <span class="text-red-700">*</span>
                                </label>

                                <div class="flex">
                                    <span class="inline-flex items-center px-4 bg-beige-500 border-2 border-r-0 border-olive-green-300 rounded-l-lg">
                                        <i class="fas fa-globe text-olive-green-600"></i>
                                    </span>
                                    <input type="text"
                                           asp-for="Products.Slug"
                                           required
                                           class="flex-1 px-4 py-3 text-lg border-2 border-olive-green-300 rounded-r-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition" disabled/>
                                </div>

                                <p class="text-sm text-gray-600 mt-2">
                                    URL amigable (sin espacios, usar guiones)
                                </p>
                                <span asp-validation-for="Products.Slug" class="text-red-700 text-sm"></span>
                            </div>

                            <!-- Categoría -->
                            <div>
                                <label asp-for="Products.CategoryId" class="block font-semibold mb-2">
                                    Categoría <span class="text-red-700">*</span>
                                </label>
                                <select asp-for="Products.CategoryId"
                                        required
                                        class="w-full px-4 py-3 text-lg border-2 border-gray-300 rounded-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition">
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                            </div>

                            <!-- Descripción corta -->
                            <div>
                                <label asp-for="Products.ShortDescription" class="block font-semibold mb-2">
                                    Descripción corta
                                </label>
                                <textarea asp-for="Products.ShortDescription"
                                          rows="2"
                                          maxlength="150"
                                          class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg resize-none focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition"></textarea>
                            </div>

                            <!-- Descripción completa -->
                            <div class="md:col-span-2">
                                <label asp-for="Products.Description" class="block font-semibold mb-2">
                                    Descripción completa
                                </label>
                                <textarea asp-for="Products.Description"
                                          rows="4"
                                          class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg resize-none focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition"></textarea>
                            </div>

                        </div>
                    </div>
                    <!-- Imágenes del producto -->
                    <div class="glass-effect rounded-2xl p-6">
                        <div class="flex justify-between items-center mb-6 pb-4 border-b-2 border-olive-green-300">
                            <h5 class="text-xl font-semibold text-dark-chocolate flex items-center">
                                <i class="fas fa-images text-olive-green-600 mr-2"></i>
                                Imágenes del producto
                            </h5>
                            <button type="button"
                                    id="btnAddImage"
                                    class="inline-flex items-center gap-2 bg-gradient-to-r from-olive-green-600 to-olive-green-700 text-white px-4 py-2 rounded-lg font-semibold hover:from-olive-green-700 hover:to-olive-green-800 transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
                                <i class="fas fa-plus"></i>
                                Agregar Imagen
                            </button>
                        </div>

                        <div id="imagesContainer" class="space-y-4">
                            <!-- Las imágenes se agregarán dinámicamente aquí -->
                        </div>

                        <div id="noImagesMessage" class="text-center py-12 text-gray-500 bg-gray-50 rounded-lg border-2 border-dashed border-gray-300">
                            <i class="fas fa-image text-5xl mb-4 text-gray-400"></i>
                            <p class="text-lg font-medium mb-1">No hay imágenes agregadas</p>
                            <p class="text-sm">Haz clic en "Agregar Imagen" para comenzar</p>
                        </div>
                    </div>

                    <!-- Atributos dinámicos -->
                    <div class="glass-effect rounded-2xl p-6">
                        <h5 class="text-xl font-semibold text-dark-chocolate mb-6 pb-4 border-b-2 border-olive-green-300 flex items-center">
                            <i class="fas fa-sliders-h text-olive-green-600 mr-2"></i>
                            Atributos del producto
                        </h5>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            @for (int i = 0; i < MasterAttributes.Count; i++)
                            {
                                var attr = MasterAttributes[i];

                                <input type="hidden"
                                       name="Attributes[@i].MasterAttributeId"
                                       value="@attr.Id" />

                                <div>
                                    @switch (attr.InputType)
                                    {
                                        case "text":
                                            <label class="block font-semibold mb-2">
                                                @attr.Name
                                                @if (attr.IsRequired)
                                                {
                                                    <span class="text-red-700">*</span>
                                                }
                                            </label>
                                            <input type="text"
                                                   name="Attributes[@i].Value"
                                                   class="w-full px-4 py-3 text-lg border-2 border-gray-300 rounded-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition" placeholder="@attr.Description"
                                                   @(attr.IsRequired ? "required" : "") />
                                            break;

                                        case "number":
                                            <label class="block font-semibold mb-2">
                                                @attr.Name
                                                @if (attr.IsRequired)
                                                {
                                                    <span class="text-red-700">*</span>
                                                }
                                            </label>
                                            <input type="number"
                                                   name="Attributes[@i].Value"
                                                   class="w-full px-4 py-3 text-lg border-2 border-gray-300 rounded-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition" placeholder="@attr.Description"
                                            @(attr.IsRequired ? "required" : "") />
                                            break;

                                        case "checkbox":

                                            @if (attr.Name == "Nuevo")
                                            {
                                                <label class="flex items-center gap-3 cursor-pointer">
                                                    <input type="checkbox"
                                                           name="Attributes[@i].Value"
                                                           value="true"
                                                           class="w-12 h-6 rounded-full appearance-none bg-gray-300 checked:bg-mint-green-700 relative transition before:absolute before:top-1 before:left-1 before:w-4 before:h-4 before:bg-white before:rounded-full checked:before:translate-x-6" checked disabled/>
                                                    @attr.Name
                                                    @if (attr.IsRequired)
                                                    {
                                                        <span class="text-red-700">*</span>
                                                    }
                                                </label>
                                            }
                                            else
                                            {
                                                <label class="flex items-center gap-3 cursor-pointer">
                                                    <input type="checkbox"
                                                           name="Attributes[@i].Value"
                                                           value="true"
                                                           class="w-12 h-6 rounded-full appearance-none bg-gray-300 checked:bg-mint-green-700 relative transition before:absolute before:top-1 before:left-1 before:w-4 before:h-4 before:bg-white before:rounded-full checked:before:translate-x-6" />
                                                    @attr.Name
                                                    @if (attr.IsRequired)
                                                    {
                                                        <span class="text-red-700">*</span>
                                                    }
                                                </label>
                                            }
                                           
                                            break;

                                        case "select":
                                            <label class="block font-semibold mb-2">
                                                @attr.Name
                                                @if (attr.IsRequired)
                                                {
                                                    <span class="text-red-700">*</span>
                                                }
                                            </label>
                                            <select name="Attributes[@i].Value[]" data-tags="true"
                                                    class="select2 w-full px-4 py-3 text-lg border-2 border-gray-300 rounded-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition"
                                                    @(attr.IsRequired ? "required" : "")>
                                                <option value="">Seleccione</option>
                                            </select>
                                            break;
                                        case "multiselect":
                                            <label class="block font-semibold mb-2">
                                                @attr.Name
                                                @if (attr.IsRequired)
                                                {
                                                    <span class="text-red-700">*</span>
                                                }
                                            </label>
                                            <select name="Attributes[@i].Value[]" data-tags="true" data-multiselect="true" multiple
                                                    class="select2 w-full px-4 py-3 text-lg border-2 border-gray-300 rounded-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition" 
                                                    @(attr.IsRequired ? "required" : "")>
                                                <option value="">Seleccione</option>
                                            </select>
                                            break;
                                    }
                                </div>
                            }
                        </div>
                    </div>

                </section>

                <!-- SIDEBAR -->
                <aside class="lg:col-span-1 space-y-6">

                    
                    <!-- Stock -->
                    <div class="glass-effect rounded-2xl p-6">
                        <h5 class="text-xl font-semibold text-dark-chocolate mb-6 pb-4 border-b-2 border-olive-green-300 flex items-center">
                            <i class="fas fa-boxes text-olive-green-600 mr-2"></i>
                            Detalles de stock
                        </h5>

                        <div class="space-y-4">

                            <div>
                                <label asp-for="ProductVariants.SKU" class="block font-semibold mb-2">
                                    SKU <span class="text-red-700">*</span>
                                </label>
                                <input type="text"
                                       asp-for="ProductVariants.SKU"
                                       required
                                       class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition" />
                            </div>

                            <div>
                                <label asp-for="ProductVariants.StockQuantity" class="block font-semibold mb-2">
                                    Stock disponible <span class="text-red-700">*</span>
                                </label>
                                <input type="number"
                                       asp-for="ProductVariants.StockQuantity"
                                       required
                                       min="0"
                                       class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition" />
                            </div>

                        </div>
                    </div>

                    <!-- Toggles -->
                    <div class="glass-effect rounded-2xl p-6 space-y-4">
                        <h5 class="text-xl font-semibold text-dark-chocolate pb-4 border-b-2 border-olive-green-300 flex items-center">
                            <i class="fas fa-toggle-on text-olive-green-600 mr-2"></i>
                            Estados
                        </h5>

                        <label class="flex items-center gap-3 cursor-pointer">
                            <input asp-for="Products.IsActive"
                                   type="checkbox"
                                   class="w-12 h-6 rounded-full appearance-none bg-gray-300 checked:bg-mint-green-700 relative transition before:absolute before:top-1 before:left-1 before:w-4 before:h-4 before:bg-white before:rounded-full checked:before:translate-x-6" />
                            <span class="font-medium">Producto activo</span>
                        </label>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="glass-effect rounded-2xl p-6 shadow-burgundy-red/30 space-y-3">
                        <button type="submit" class="w-full inline-flex items-center justify-center gap-2 bg-gradient-to-r from-amber-800 to-amber-900 text-white px-6 py-3 rounded-lg font-semibold hover:from-amber-700 hover:to-amber-800 transition-all duration-200 shadow-md hover:shadow-lg transform hover:-translate-y-0.5">
                            <i class="fas fa-save"></i>
                            Guardar Producto
                        </button>
                        <a href="@Url.Action("Index", "Products")" class="w-full inline-flex items-center justify-center gap-2 bg-gray-100 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-gray-200 transition-all duration-200">
                            <i class="fas fa-times"></i>
                            Cancelar
                        </a>
                    </div>

                </aside>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/application/products/generic.js"></script>
    <script type="module" src="~/js/application/products/create.js"></script>
}