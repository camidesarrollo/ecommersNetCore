@model Ecommers.Web.Models.Products.ProductsCreateViewModel

@{
    ViewData["Title"] = "Crear Producto";
    Layout = "~/Web/Views/Shared/_LayoutAdmin.cshtml";

    var MasterAttributes = Model.MasterAttributes.ToList();
}
@section Styles {
    <link rel="stylesheet" href="~/css/shepherd.css">
}

<div class="bg-pattern min-h-screen py-8 px-4">
    <div class="max-w-7xl mx-auto">

        <!-- Breadcrumb -->
        <nav class="mb-6 slide-in" aria-label="breadcrumb">
            <ol class="flex items-center space-x-2 bg-white rounded-lg shadow-sm p-4">
                <li>
                    <a href="@Url.Action("Index", "Home")" class="text-olive-green-600 hover:text-olive-green-700 flex items-center">
                        <i class="fas fa-home mr-2"></i>Inicio
                    </a>
                </li>
                <li class="text-olive-green-500"><i class="fas fa-chevron-right text-sm"></i></li>
                <li>
                    <a href="@Url.Action("Index", "Products")" class="text-olive-green-600 hover:text-olive-green-700">
                        Productos
                    </a>
                </li>
                <li class="text-olive-green-500"><i class="fas fa-chevron-right text-sm"></i></li>
                <li class="text-dark-chocolate font-medium">Crear Producto</li>
            </ol>
        </nav>

        <!-- Header -->
        <div class="mb-6 slide-in delay-200">
            <div class="glass-effect rounded-2xl p-6 shadow-olive-green/30">
                <div class="flex justify-between items-center flex-wrap gap-4">
                    <div>
                        <h1 class="text-3xl font-bold text-dark-chocolate mb-2 flex items-center">
                            <i class="fas fa-image text-olive-green-600 mr-3"></i>
                            Nuevo Producto
                        </h1>
                        <p class="text-gray-600">Complete los campos para crear un nuevo producto</p>
                    </div>
                    <div class="flex gap-3">
                        <!-- Botón de ayuda en header -->
                        <button id="help-tour-button"
                                type="button"
                                class="help-button-header"
                                title="Iniciar tour guiado">
                            <i class="fas fa-question-circle"></i>
                            <span>Ayuda</span>
                        </button>

                        <!-- Botón volver -->
                        <a href="@Url.Action("Index", "Products")"
                           class="inline-flex items-center px-6 py-3 bg-gray-light rounded-lg text-dark-chocolate font-semibold hover:bg-gray-light-dark transition-all" id="volver-button">
                            <i class="fas fa-arrow-left mr-2"></i>Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- FORM -->
        <form asp-action="Crear"
              method="post"
              enctype="multipart/form-data"
              id="formProducts"
              class="slide-in delay-400">

            @Html.AntiForgeryToken()

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

                <!-- CONTENIDO PRINCIPAL -->
                <section class="lg:col-span-2 space-y-6">

                    <div class="glass-effect rounded-2xl p-6">
                        <h5 class="text-xl font-semibold text-dark-chocolate mb-6 pb-4 border-b-2 border-olive-green-300 flex items-center">
                            <i class="fas fa-info-circle text-olive-green-600 mr-2"></i>
                            Información del producto
                        </h5>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                            <!-- Nombre -->
                            <div>
                                <label asp-for="Products.Name" class="block font-semibold mb-2">
                                    Nombre <span class="text-red-700">*</span>
                                </label>
                                <input type="text"
                                       asp-for="Products.Name"
                                       required
                                       class="w-full px-4 py-3 text-lg border-2 border-gray-300 rounded-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition" />
                                <span asp-validation-for="Products.Name" class="text-red-700 text-sm"></span>
                            </div>

                            <!-- Slug -->
                            <div>
                                <label asp-for="Products.Slug" class="block font-semibold mb-2">
                                    Slug URL <span class="text-red-700">*</span>
                                </label>

                                <div class="flex">
                                    <span class="inline-flex items-center px-4 bg-beige-500 border-2 border-r-0 border-olive-green-300 rounded-l-lg">
                                        <i class="fas fa-globe text-olive-green-600"></i>
                                    </span>
                                    <input type="text"
                                           asp-for="Products.Slug"
                                           required
                                           class="flex-1 px-4 py-3 text-lg border-2 border-olive-green-300 rounded-r-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition" />
                                </div>

                                <p class="text-sm text-gray-600 mt-2">
                                    URL amigable (sin espacios, usar guiones)
                                </p>
                                <span asp-validation-for="Products.Slug" class="text-red-700 text-sm"></span>
                            </div>

                            <!-- Categoría -->
                            <div>
                                <label asp-for="Products.CategoryId" class="block font-semibold mb-2">
                                    Categoría <span class="text-red-700">*</span>
                                </label>
                                <select asp-for="Products.CategoryId"
                                        required
                                        class="w-full px-4 py-3 text-lg border-2 border-gray-300 rounded-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition">
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                            </div>

                            <!-- Descripción corta -->
                            <div>
                                <label asp-for="Products.ShortDescription" class="block font-semibold mb-2">
                                    Descripción corta
                                </label>
                                <textarea asp-for="Products.ShortDescription"
                                          rows="2"
                                          maxlength="150"
                                          class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg resize-none focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition"></textarea>
                            </div>

                            <!-- Descripción completa -->
                            <div class="md:col-span-2">
                                <label asp-for="Products.Description" class="block font-semibold mb-2">
                                    Descripción completa
                                </label>
                                <textarea asp-for="Products.Description"
                                          rows="4"
                                          class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg resize-none focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition"></textarea>
                            </div>

                        </div>
                    </div>
                    <!-- ===========================
                         ATRIBUTOS DINÁMICOS
                    ============================ -->
                    <div class="glass-effect rounded-2xl p-6">
                        <h5 class="text-xl font-semibold mb-6 border-b pb-4">
                            Atributos del producto
                        </h5>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            @for (int i = 0; i < MasterAttributes.Count; i++)
                            {
                                var attr = MasterAttributes[i];

                                <input type="hidden"
                                       name="Attributes[@i].MasterAttributeId"
                                       value="@attr.Id" />

                                <div>
                                    <label class="font-semibold">
                                        @attr.Name
                                        @if (attr.IsRequired)
                                        {
                                            <span class="text-red-700">*</span>
                                        }
                                    </label>

                                    @switch (attr.InputType)
                                    {
                                        case "text":
                                            <input type="text"
                                                   name="Attributes[@i].Value"
                                                   class="w-full px-4 py-3 text-lg border-2 border-gray-300 rounded-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition" placeholder="@attr.Description"
                                                   @(attr.IsRequired ? "required" : "") />
                                            break;

                                        case "number":
                                            <input type="number"
                                                   name="Attributes[@i].Value"
                                                   class="w-full px-4 py-3 text-lg border-2 border-gray-300 rounded-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition" placeholder="@attr.Description"
                                                   @(attr.IsRequired ? "required" : "") />
                                            break;

                                        case "checkbox":
                                            <input type="hidden"
                                                   name="Attributes[@i].Value"
                                                   value="false" />
                                            <input type="checkbox"
                                                   name="Attributes[@i].Value"
                                                   value="true"
                                                   class="w-12 h-6 rounded-full appearance-none bg-gray-300 checked:bg-mint-green-700 relative transition before:absolute before:top-1 before:left-1 before:w-4 before:h-4 before:bg-white before:rounded-full checked:before:translate-x-6" />
                                            <p class="text-sm text-gray-500">@attr.Description</p>
                                            break;

                                        case "select":
                                            <select name="Attributes[@i].Value"
                                                    class="w-full px-4 py-3 text-lg border-2 border-gray-300 rounded-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition"
                                                    @(attr.IsRequired ? "required" : "")>
                                                <option value="">Seleccione</option>
                                            </select>
                                            break;
                                    }

                                  
                                </div>
                            }
                        </div>
                </section>

                <!-- SIDEBAR -->
                <aside class="lg:col-span-1 space-y-6">

                    <!-- Stock -->
                    <div class="glass-effect rounded-2xl p-6">
                        <h5 class="text-xl font-semibold mb-6 border-b pb-4">
                            Detalles de stock
                        </h5>

                        <div class="space-y-4">

                            <div>
                                <label asp-for="ProductVariants.SKU" class="block font-semibold mb-2">
                                    SKU <span class="text-red-700">*</span>
                                </label>
                                <input type="text"
                                       asp-for="ProductVariants.SKU"
                                       required
                                       class="w-full px-4 py-3 border-2 rounded-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition" />
                            </div>

                            <div>
                                <label asp-for="ProductVariants.StockQuantity" class="block font-semibold mb-2">
                                    Stock disponible <span class="text-red-700">*</span>
                                </label>
                                <input type="number"
                                       asp-for="ProductVariants.StockQuantity"
                                       required
                                       min="0"
                                       class="w-full px-4 py-3 border-2 rounded-lg focus:border-olive-green-500 focus:ring-olive-green-500 outline-none transition" />
                            </div>

                        </div>
                    </div>

                    <!-- Toggles -->
                    <div class="glass-effect rounded-2xl p-6 space-y-4">
                        <h5 class="text-xl font-semibold border-b pb-4">
                            Comportamiento
                        </h5>

                        <label class="flex items-center gap-3 cursor-pointer">
                            <input asp-for="ProductVariants.IsActive"
                                   type="checkbox"
                                   class="w-12 h-6 rounded-full appearance-none bg-gray-300 checked:bg-mint-green-700 relative transition before:absolute before:top-1 before:left-1 before:w-4 before:h-4 before:bg-white before:rounded-full checked:before:translate-x-6" />
                            Producto activo
                        </label>

                        <label class="flex items-center gap-3 cursor-pointer">
                            <input asp-for="ProductVariants.IsFeatured"
                                   type="checkbox"
                                   class="w-12 h-6 rounded-full appearance-none bg-gray-300 checked:bg-mint-green-700 relative transition before:absolute before:top-1 before:left-1 before:w-4 before:h-4 before:bg-white before:rounded-full checked:before:translate-x-6" />
                            Producto destacado
                        </label>
                    </div>

                </aside>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="module" src="~/js/application/products/generic.js"></script>
    <script type="module" src="~/js/application/products/create.js"></script>
}
