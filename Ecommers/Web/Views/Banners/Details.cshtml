@model Ecommers.Domain.Entities.BannersD

@{
    ViewData["Title"] = "Detalle Banner";
    Layout = "~/Web/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="bg-pattern min-h-screen py-8 px-4">
    <div class="mx-auto space-y-6">

        <!-- Breadcrumb -->
        <nav class="mb-6" aria-label="breadcrumb">
            <ol class="flex items-center space-x-2 bg-white rounded-lg shadow-sm p-4">
                <li>
                    <a href="@Url.Action("Index", "Home")" class="text-olive-green-600 hover:text-olive-green-700">
                        <i class="fas fa-home mr-2"></i>Inicio
                    </a>
                </li>
                <li class="text-olive-green-500"><i class="fas fa-chevron-right text-sm"></i></li>
                <li>
                    <a href="@Url.Action("Index", "Banners")" class="text-olive-green-600 hover:text-olive-green-700">
                        Banners
                    </a>
                </li>
                <li class="text-olive-green-500"><i class="fas fa-chevron-right text-sm"></i></li>
                <li class="text-dark-chocolate font-medium">Detalle</li>
            </ol>
        </nav>

        <!-- Header -->
        <div class="glass-effect rounded-2xl p-6 shadow-olive-green/30 flex flex-col sm:flex-row justify-between gap-4">
            <div>
                <h1 class="text-3xl font-bold text-dark-chocolate flex items-center gap-3">
                    <i class="fas fa-image text-olive-green-600 mr-2" ></i>
                    Banner  @Model.Seccion
                </h1>
            </div>

            <div class="flex gap-2">
                <a href="@Url.Action("Editar", "Banners", new { id = Model.Id })"
                   class="inline-flex items-center gap-2 bg-white text-amber-900 px-6 py-3 rounded-lg font-semibold hover:bg-amber-50 transition-all shadow-md">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a href="@Url.Action("Index", "Banners")"
                   class="inline-flex items-center gap-2 bg-amber-700 text-white px-6 py-3 rounded-lg font-semibold hover:bg-amber-600 transition-all shadow-md">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </div>

        <!-- Contenido -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

            <!-- Información -->
            <div class="lg:col-span-2 space-y-6">
                <div class="glass-effect rounded-2xl p-6 shadow-nut-brown/30">
                    <h5 class="text-xl font-semibold text-dark-chocolate mb-6 pb-4 border-b-2 border-olive-green-300 flex items-center">
                        <i class="fas fa-info-circle text-olive-green-600 mr-2" ></i>
                        Información del Banner
                    </h5>

                    <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <dt class="text-sm text-gray-500">Sección</dt>
                            <dd class="font-semibold">@Model.Seccion</dd>
                        </div>

                        <div>
                            <dt class="text-sm text-gray-500">Texto Alternativo</dt>
                            <dd>@Model.AltText</dd>
                        </div>

                        <div class="sm:col-span-2">
                            <dt class="text-sm text-gray-500">Título</dt>
                            <dd class="text-xl font-bold text-dark-chocolate">@Model.Titulo</dd>
                        </div>

                        <div class="sm:col-span-2">
                            <dt class="text-sm text-gray-500">SubTítulo</dt>
                            <dd class="text-gray-700">@Model.Subtitulo</dd>
                        </div>

                        <div>
                            <dt class="text-sm text-gray-500">Texto del Botón</dt>
                            <dd>@Model.BotonTexto</dd>
                        </div>

                        <div>
                            <dt class="text-sm text-gray-500">Enlace del Botón</dt>
                            <dd class="font-mono text-sm text-blue-600">
                                <a href="@Model.BotonEnlace" target="_blank">@Model.BotonEnlace</a>
                            </dd>
                        </div>
                    </dl>
                </div>

                <!-- Vista previa -->
                <div class="glass-effect rounded-2xl p-6 shadow-nut-brown/30">
                    <h5 class="text-xl font-semibold text-dark-chocolate mb-6 pb-4 border-b-2 border-olive-green-300 flex items-center">
                        <i class="fas fa-eye text-olive-green-600 mr-2"></i>
                        Vista previa
                    </h5>

                 
                    @await Html.PartialAsync("~/Web/Views/Shared/Components/Banners/_BannerItem.cshtml", Model);
                </div>
            </div>

            <!-- Imagen -->
            <div class="space-y-6">
                <div class="glass-effect rounded-2xl p-6 shadow-golden-yellow/30">
                    <h5 class="text-xl font-semibold text-dark-chocolate mb-6 pb-4 border-b-2 border-olive-green-300 flex items-center">
                        <i class="fas fa-image text-olive-green-600 mr-2" ></i>
                        Imagen del Banner
                    </h5>

                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="@Model.Image" class="w-full rounded-xl shadow-md" />
                        <p class="text-sm text-gray-500 mt-2">Alt: @Model.AltText</p>
                    }
                    else
                    {
                        <div class="text-gray-500 text-sm">Sin imagen asignada</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
