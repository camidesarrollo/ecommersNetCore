@model Ecommers.Web.Models.Shared.Components.NavViewModel

<nav class="bg-white border-b border-gray-200 sticky top-[68px] sm:top-[81px] z-30 shadow-sm">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Navegación Desktop -->
        <div class="hidden lg:flex items-center justify-center gap-8 py-4">

            @foreach (var item in Model.Items)
            {
                if (item.Children == null)
                {
                    <!-- ÍTEM NORMAL -->
                    <a href="@item.Path"
                       class="text-gray-700 hover:text-yellow-500 font-medium transition-colors duration-200 flex items-center gap-2">
                        <i class="@item.Icon text-sm"></i> @item.Name
                    </a>
                }
                else
                {
                    <!-- ÍTEM CON DROPDOWN -->
                    <div class="relative group">
                        <button class="text-gray-700 hover:text-yellow-500 font-medium transition-colors duration-200 flex items-center gap-2">
                            <i class="@item.Icon text-sm"></i> @item.Name
                            <i class="fas fa-chevron-down text-xs"></i>
                        </button>

                        <div class="hidden absolute top-full left-0 mt-2 w-64 bg-white border border-gray-200 rounded-xl shadow-lg overflow-hidden z-50">

                            @foreach (var sub in item.Children)
                            {
                                <a href="@sub.Path"
                                   class="block px-4 py-3 text-gray-700 hover:bg-yellow-50 hover:text-yellow-600 transition-colors font-medium border-b border-gray-100">
                                    <i class="@sub.Icon text-sm mr-2"></i> @sub.Name
                                </a>
                            }
                        </div>
                    </div>
                }
            }
        </div>

        <!-- NAV MOBILE -->
        <div class="lg:hidden flex items-center justify-between py-3">
            <button id="btn-mobile-menu" class="text-gray-700 p-2 hover:bg-gray-100 rounded-lg transition">
                <i class="fas fa-bars text-xl"></i>
            </button>
            <span class="text-sm font-medium text-gray-700">Menú de Navegación</span>
            <div class="w-10"></div>
        </div>

    </div>

    <!-- Overlay móvil -->
    <div id="mobile-overlay" class="hidden fixed inset-0 bg-black/50 z-[45]"></div>

    <!-- Sidebar móvil -->
    <div id="mobile-menu"
         class="hidden fixed top-0 left-0 bottom-0 w-80 max-w-[85vw] bg-white shadow-2xl z-[48] overflow-y-auto slide-right">

        <!-- Header -->
        <div class="bg-gradient-to-r from-yellow-500 to-yellow-600 p-6 text-white">
            <div class="flex items-center justify-between mb-2">
                <h2 class="text-xl font-bold">Menú</h2>
                <button id="close-mobile-menu" class="p-2 hover:bg-white/20 rounded-lg transition">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <p class="text-yellow-100 text-sm">@Model.Configuracion.MetaAutor</p>
        </div>

        <!-- Opciones -->
        <div class="py-2 lg:hidden">

            @foreach (var item in Model.Items)
            {
                if (item.Children == null)
                {
                    <!-- ITEM NORMAL -->
                    <a href="@item.Path" class="flex items-center gap-3 px-6 py-4 text-gray-700 hover:bg-yellow-50 border-b border-gray-100">
                        <i class="@item.Icon text-yellow-500 w-5"></i> @item.Name
                    </a>
                }
                else
                {
                    <!-- ITEM CON SUBMENÚ -->
                    <div class="border-b border-gray-100">
                        <button class="flex items-center justify-between w-full px-6 py-4 text-gray-700 hover:bg-yellow-50">
                            <div class="flex items-center gap-3">
                                <i class="@item.Icon text-yellow-500 w-5"></i>
                                <span class="font-medium">@item.Name</span>
                            </div>
                            <i class="fas fa-chevron-down text-sm"></i>
                        </button>

                        <div class="hidden bg-gray-50 py-2">
                            @foreach (var sub in item.Children)
                            {
                                <a href="@sub.Path"
                                   class="flex items-center gap-3 px-6 py-3 text-gray-700 hover:bg-yellow-50">
                                    <i class="@sub.Icon text-yellow-500 w-5 ml-8"></i> @sub.Name
                                </a>
                            }
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Footer -->
        <div class="mt-auto p-6 bg-gray-50 border-t border-gray-200">
            <p class="text-xs text-gray-500 text-center">© @DateTime.Now.Year @Model.Configuracion.MetaAutor</p>

        </div>

    </div>
</nav>
