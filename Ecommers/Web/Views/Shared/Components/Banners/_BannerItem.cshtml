@model Ecommers.Domain.Entities.BannersD

<section class="relative w-full h-56 sm:h-64 md:h-80 lg:h-[28rem]">

    <!-- Imagen -->
    <img src="@Model.Image"
         alt="@Model.AltText"
         class="absolute inset-0 w-full h-full object-cover"
         fetchpriority="high" />

    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/40"></div>

    <!-- Contenido -->
    <div class="relative flex flex-col items-center justify-center h-full text-center text-white px-4 z-10">

        <p class="uppercase tracking-widest text-xs sm:text-sm md:text-base">
            @Model.Subtitulo
        </p>

        <h1 class="text-xl sm:text-3xl md:text-5xl font-extrabold mt-2">
            @Model.Titulo
        </h1>

        @if (!string.IsNullOrWhiteSpace(Model.BotonEnlace))
        {
            <a href="@Model.BotonEnlace"
               class="mt-4 inline-block bg-white text-black font-semibold px-4 sm:px-6 py-2 sm:py-3 rounded-full shadow-md hover:bg-gray-200 transition">
                @Model.BotonTexto
            </a>
        }
    </div>
</section>

