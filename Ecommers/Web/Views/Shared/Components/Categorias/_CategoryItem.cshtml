@model Ecommers.Domain.Entities.CategoriesD

@{
    var ahora = DateTime.Now;
    var esNuevo =
        Model.CreatedAt.Year == ahora.Year &&
        Model.CreatedAt.Month == ahora.Month;
}

<div class="relative flex flex-col items-center justify-center rounded-2xl p-6 cursor-pointer
            transform transition-all shadow-lg border border-white/30 hover:shadow-2xl hover:scale-105
            @Model.BgClass">

    <!-- Badge cantidad -->
    <div class="absolute top-2 right-2 bg-white/90 text-gray-800 text-xs font-bold px-2 py-1 rounded-full shadow backdrop-blur-sm">
        @Model.CantidadProductos productos
    </div>

    <!-- Badge nuevo -->
    @if (esNuevo)
    {
        <div class="absolute top-2 left-2 bg-burgundy-red text-white text-xs font-bold px-2 py-1 rounded-full shadow">
            Nuevo
        </div>
    }

    <!-- Imagen -->
    @if (!string.IsNullOrEmpty(Model.Image))
    {
        <div class="mb-3">
            <img src="@Model.Image"
                 alt="@Model.Name"
                 class="w-14 h-auto rounded-full shadow-md border-2 border-white/50" />
        </div>
    }

    <!-- Nombre -->
    <span class="text-lg font-bold text-white drop-shadow-lg text-center">
        @Model.Name
    </span>

    <!-- Descripción -->
    <span class="text-sm text-white/90 italic mb-1 text-center">
        @Model.ShortDescription
    </span>

    <!-- CTA -->
    <span class="text-xs text-white/95 underline mt-2 cursor-pointer hover:text-white transition-colors">
        Ver más
    </span>
</div>
